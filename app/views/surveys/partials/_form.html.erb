<%= form_for(@survey) do |f| %>

  <% if @survey.errors.any? %>
    <div id="errors">
      <h2>
        <%= pluralize(@survey.errors.count, "error") %> prevented this survey from saving</h2>
        <ul>
          <% @survey.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-actions">
      <%= f.submit %>
  </div>
<% end %>

