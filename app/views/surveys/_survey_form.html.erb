<%= form_for @survey do |f| %>
  <% @survey.questions.each do |q| %>
    <%= fields_for q do |question_form| %>
      <%= question_form.text_field :prompt %>

      <% q.answers.each do |a| %>
        <%= fields_for a do |answer_form| %>
          <%= answer_form.text_field :content %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= link_to "Back to Surveys", surveys_path %>
